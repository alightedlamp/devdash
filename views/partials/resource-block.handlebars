{{!-- Begin resource repeating element --}}
<div class="notification is-warning">
	<header>
		<p class="card-header-title">
			<a href="{{link}}" class="resourceLink" id="{{id}}">{{title}}
				<i class="fas fa-arrow-right"></i>
			</a>
		</p>
		<div class="dropdown is-inactive">
			<div class="dropdown-trigger">
				<button class="button" aria-haspopup="true" aria-controls="dropdown-menu">
					<span>Options</span>
					<span class="icon is-small">
						<i class="fas fa-angle-down" aria-hidden="true"></i>
					</span>
				</button>
			</div>
			<div class="dropdown-menu" id="dropdown-menu" role="menu">
				<div class="dropdown-content">
					<a href="#" class="dropdown-item editResource" data-id="{{id}}">
						<span>Edit</span>
					</a>
					<hr class="dropdown-divider">
					<a href="#" class="dropdown-item deleteResource" data-id="{{id}}">
						<span>Delete</span>
					</a>
				</div>
			</div>
		</div>
	</header>
</div>
{{!-- End repeating element --}}