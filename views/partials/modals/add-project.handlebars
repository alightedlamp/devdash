<div class="modal project-modal">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title">Add a Project</p>
        </header>
        <section class="modal-card-body">

            <!-- Project Name Input -->
            <div class="field">
                <label class="label">Name</label>
                <div class="control">
                    <input class="input" type="text" placeholder="" id="projectSubmitNameField">
                </div>
            </div>

            <!-- Project Description Input -->
            <div class="field">
                <label class="label">Description</label>
                <div class="control">
                    <input class="input" type="text" placeholder="" id="projectSubmitDescriptionField">
                </div>
            </div>

            <!-- Progress Input -->
            <div class="field">
                <label class="label">Progress</label>
                <div class="control">
                    <input class="input" type="text" placeholder="(0-100%)" id="projectSubmitProgressField">
                </div>
            </div>

            <!-- Due Date Input -->
            <div class="field">
                <label class="label">Due Date</label>
                <div class="control">
                    <input class="input" type="date" id="projectSubmitDueDateField">
                </div>
            </div>

            <!-- Dropdown -->
            <div class="field">
                <label class="label">Priority</label>
                <div class="control">
                    <div class="select">
                        <select id="projectSubmitProgressField">
                            <option value="2">High</option>
                            <option value="1">Normal</option>
                            <option value="0">Low</option>
                        </select>
                    </div>
                </div>
            </div>
        </section>
        <footer class="modal-card-foot">
            <button class="button is-success" id="submitNewProject">Save changes</button>
            <button class="button project-cancel">Cancel</button>
        </footer>
    </div>
</div>