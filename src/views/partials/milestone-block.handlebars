<div class="card">
	<header class="card-header">
		<p class="card-header-title">
			{{title}}
		</p>
		<a class="card-header-icon" aria-label="more options">
		<span class="icon">
			<i class="fas fa-angle-down" aria-hidden="true"></i>
		</span>
		</a>
	</header>
	<div class="card-content">
		<div class="content">
			<p>Priority: {{priority}}</p>
		<br>
		<time>Completed At: {{completed_at}}</time>
		</div>
	</div>
	<footer class="card-footer">
		<a href="#" class="card-footer-item editMilestone" data-id="{{id}}">Edit</a>
		<a href="#" class="card-footer-item deleteMilestone" data-id="{{id}}">Delete</a>
	</footer>
</div>